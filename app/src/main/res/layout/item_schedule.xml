<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="2"
    android:paddingLeft="@dimen/margin_medium"
    android:paddingRight="@dimen/margin_medium"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <TextView
        android:text="031Г Киров - Москва"
        android:textSize="18sp"
        app:layout_columnSpan="2"
        app:layout_gravity="fill_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_directions_railway"
        android:drawablePadding="8dp"
        android:textColor="@android:color/holo_blue_dark"
        android:id="@+id/route"
        android:fontFamily="sans-serif-light"
        />
    <TextView
        android:text="6:00"
        android:textSize="28sp"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black"
        android:id="@+id/startTime"
        />
    <TextView
        android:text="18:00"
        android:textSize="28sp"
        android:gravity="right"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black"
        android:id="@+id/finishTime" />
    <TextView
        android:text="Нижний Новгород (Московский вокзал)"
        android:maxWidth="150dp"
        app:layout_columnWeight="1"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/black"
        android:id="@+id/stationFrom"
        />
    <TextView
        android:text="Ярославский вокзал"
        android:maxWidth="150dp"
        android:gravity="right"
        app:layout_columnWeight="1"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/black"
        android:id="@+id/stationTo"
        />
</android.support.v7.widget.GridLayout>