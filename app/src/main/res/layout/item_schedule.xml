<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:columnCount="2"
    android:paddingLeft="@dimen/margin_medium"
    android:paddingRight="@dimen/margin_medium"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:paddingTop="@dimen/margin_medium_horizontal"
    android:paddingBottom="@dimen/margin_medium_horizontal">

    <TextView
        android:text="031Г Киров - Москва"
        app:layout_columnSpan="2"
        app:layout_gravity="fill_horizontal"
        android:drawablePadding="8dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/route"
        android:layout_marginBottom="@dimen/margin_small_horizontal"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:textAllCaps="true"
        android:textSize="@dimen/schedule_route_text_size" />

    <TextView
        android:text="6:00"
        android:textSize="@dimen/schedule_time_text_size"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        android:textColor="@color/abc_primary_text_material_dark"
        android:id="@+id/startTime"
        android:paddingEnd="@dimen/margin_small_vertical" />
    <TextView
        android:text="18:00"
        android:textSize="@dimen/schedule_time_text_size"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        android:textColor="@color/abc_primary_text_material_dark"
        android:id="@+id/finishTime"
        android:paddingStart="@dimen/margin_small_vertical" />

    <TextView
        android:text="4 июля"
        app:layout_columnWeight="1"
        android:layout_marginBottom="@dimen/margin_small_horizontal"
        app:layout_gravity="fill_horizontal"
        style="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/abc_primary_text_material_dark"
        android:id="@+id/startDate"
        android:textSize="@dimen/schedule_date_text_size"
        android:paddingEnd="@dimen/margin_small_vertical" />

    <TextView
        android:text="5 июля"
        app:layout_columnWeight="1"
        android:layout_marginBottom="@dimen/margin_small_horizontal"
        app:layout_gravity="fill_horizontal"
        style="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/abc_primary_text_material_dark"
        android:id="@+id/finishDate"
        android:textSize="@dimen/schedule_date_text_size"
        android:paddingStart="@dimen/margin_small_vertical" />

    <TextView
        android:text="Нижний Новгород \n(Московский вокзал)"
        app:layout_columnWeight="1"
        android:id="@+id/stationFrom"
        android:textColor="@color/abc_secondary_text_material_dark"
        android:maxLines="2"
        android:textSize="@dimen/schedule_station_text_size"
        app:layout_gravity="fill_vertical"
        android:paddingEnd="@dimen/margin_small_vertical"
        android:fontFamily="sans-serif-light"
        android:layout_width="150dp"
        android:gravity="center_vertical" />
    <TextView
        android:text="Ярославский вокзал"
        app:layout_columnWeight="1"
        android:id="@+id/stationTo"
        android:textColor="@color/abc_secondary_text_material_dark"
        android:maxLines="2"
        android:textSize="@dimen/schedule_station_text_size"
        app:layout_gravity="fill_vertical"
        android:paddingStart="@dimen/margin_small_vertical"
        android:fontFamily="sans-serif-light"
        android:layout_width="150dp"
        android:gravity="center_vertical" />
</android.support.v7.widget.GridLayout>