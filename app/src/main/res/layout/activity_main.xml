<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/colorPrimary"
    tools:context="com.postnov.android.yaschedule.MainActivity">

    <include
        android:id="@+id/toolbar_main"
        layout="@layout/toolbar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/dividerHorizontal"
        android:layout_below="@+id/toolbar_main"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <EditText
            android:id="@+id/from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/from"
            android:background="@android:color/transparent"
            android:textSize="32sp"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textColorHint="@color/abc_secondary_text_material_dark"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:fontFamily="sans-serif-light" />

        <EditText
            android:id="@+id/to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/to"
            android:background="@android:color/transparent"
            android:textSize="32sp"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textColorHint="@color/abc_secondary_text_material_dark"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/when"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/whenHint"
            android:background="?attr/selectableItemBackground"
            android:textSize="32sp"
            android:singleLine="true"
            android:textColor="@color/abc_secondary_text_material_dark"
            android:drawableEnd="@drawable/ic_calendar"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:clickable="true"
            android:fontFamily="sans-serif-light" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_find"
        android:layout_gravity="center_horizontal"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="@color/button_text_selector"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:id="@+id/button_find"
        android:onClick="showSchedule" />
</RelativeLayout>
